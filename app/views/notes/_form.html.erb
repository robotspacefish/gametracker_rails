<div class="form-row align-items-center">
  <div class="form-group col-md-6">
    <%= f.label :title, class: "col-form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
</div>
<div class="form-row align-items-center">
  <div class="form-group col-md-6">
    <%= f.label :content, class: "col-form-label" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>
</div>
<div class="form-row align-items-center">
  <div class="form-check">
    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label :completed, "Completed?", class: "form-check-label" %>
  </div>
</div>

<%= f.submit class: submit_button_classes %>
