<!DOCTYPE html>
<html>
  <head>
    <title>GametrackerRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if logged_in? %>
        <div>
          <%= link_to "Games", games_path %>
          <%= link_to "Add Custom Game", new_game_path %>
        </div>
        <div>
          <%= link_to "#{current_user.username} Home", user_path(current_user) %> |
          <%= link_to "My Collection", user_collection_path(current_user) %> |
          <%= link_to "My Account", user_account_path(current_user) %> |
          <%= link_to "Log Out", logout_path, method: 'delete' %>
        </div>
      <% else %>
        <%= link_to "Log In", login_path %>
        <%= link_to "Sign Up", signup_path %>
      <% end %>

    </nav>

    <%= flash[:message] if flash[:message] %>

    <%= yield %>
  </body>
</html>
