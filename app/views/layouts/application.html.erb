<!DOCTYPE html>
<html>
  <head>
    <title>GametrackerRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://unpkg.com/tachyons@4.10.0/css/tachyons.min.css"/>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body class="avenir">
    <header class="black">
      <nav class="flex justify-between bb b--white-10">
        <div class="flex-grow pa3 flex items-center">
          <% if logged_in? %>
              <div>
                <%= link_to "Games", games_path, class: "f6 link dib white dim mr3 mr4-ns" %>
                <%= link_to "Create Game", new_game_path, class: "f6 link dib white dim mr3 mr4-ns" %>

                <%= link_to display_avatar(current_user), user_path(current_user), class: "f6 link dib white dim mr3 mr4-ns" %>
                <%= link_to "My Collection", user_games_path(current_user), class: "f6 link dib white dim mr3 mr4-ns" %>
                <%= link_to "My Account", user_account_path(current_user), class: "f6 link dib white dim mr3 mr4-ns" %>
                <%= link_to "Log Out", logout_path, method: 'delete', class: "f6 link dib white dim mr3 mr4-ns" %>
              </div>
              <% else %>
                <%= link_to "Log In", login_path, class: "f6 link dib white dim mr3 mr4-ns" %>
                <%= link_to "Sign Up", signup_path, class: "f6 link dib white dim mr3 mr4-ns" %>
              <% end %>
        </div>
      </nav>
    </header>


    <%= flash[:message] if flash[:message] %>

    <%= yield %>
  </body>
</html>
