<!DOCTYPE html>
<html>
  <head>
    <title>GametrackerRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </head>

  <body class="avenir">
    <header class="black">
      <nav class="flex justify-between bb b--white-10">
        <div class="flex-grow pa3 flex items-center">
          <% if logged_in? %>
              <div>
                <%= link_to "Games", games_path, class: "f6 link dib white dim mr3 mr4-ns" %>
                <%= link_to "Create Game", new_game_path, class: "f6 link dib white dim mr3 mr4-ns" %>

                <%= link_to display_avatar(current_user), user_path(current_user), class: "f6 link dib white dim mr3 mr4-ns" %>
                <%= link_to "My Collection", user_games_path(current_user), class: "f6 link dib white dim mr3 mr4-ns" %>
                <%= link_to "My Account", user_account_path(current_user), class: "f6 link dib white dim mr3 mr4-ns" %>
                <%= link_to "Log Out", logout_path, method: 'delete', class: "f6 link dib white dim mr3 mr4-ns" %>
              </div>
              <% else %>
                <%= link_to "Log In", login_path, class: "f6 link dib white dim mr3 mr4-ns" %>
                <%= link_to "Sign Up", signup_path, class: "f6 link dib white dim mr3 mr4-ns" %>
              <% end %>
        </div>
      </nav>
    </header>


    <%= flash[:message] if flash[:message] %>

    <%= yield %>
  </body>
</html>
