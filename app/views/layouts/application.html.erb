<!DOCTYPE html>
<html>
  <head>
    <title>GametrackerRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if logged_in? %>
        <%= link_to "Log Out", logout_path, method: 'delete' %>
        <%= link_to "#{current_user.username} Home", user_path(current_user) %>
        <%= link_to "My Collection", user_collection_path(current_user) %>
      <% else %>
        <%= link_to "Log In", login_path %>
        <%= link_to "Sign Up", signup_path %>
      <% end %>

    </nav>
    <%= yield %>
  </body>
</html>
