<%= display_title("Add #{@game.title} to Your Collection") %>

<p><%= @game.summary %></p>

<%= form_for(:owned_game, url: game_owned_games_path) do |f| %>
  <%= f.label :platform_ids, "Select Platform(s)" %><br>
  <div class="form-row align-items-center">
    <div class="form-group col-md-6">
      <%= f.collection_select :platform_ids, @game.platforms.sort_by_name, :id, :name, {}, { class: "form-control", multiple: true } %>
    </div>
  </div>

  <div class="form-check">
    <%= f.radio_button :status, "want_to_play", class: "form-check-input" %>
    <%= f.label :want_to_play, class: "form-check-label"  %>
  </div>
  <div class="form-check">
    <%= f.radio_button :status, "currently_playing", class: "form-check-input" %>
    <%= f.label :currently_playing, class: "form-check-label"  %>
  </div>
  <div class="form-check">
    <%= f.radio_button :status, "completed", class: "form-check-input" %>
    <%= f.label :completed, class: "form-check-label"  %>
  </div>

  <%= f.hidden_field :game_id, value: @game.id %>

  <div class="row">
    <%= f.submit "Add to Collection", class: submit_button_classes %>
    <%= link_to "Cancel", games_path, class: "btn btn-danger mt-4 ml-2" %>
  </div>
<% end %>